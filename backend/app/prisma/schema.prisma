// Prisma schema for Supabase PostgreSQL
generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model
model User {
  id                String        @id @default(cuid())
  name              String?
  email             String?       @unique
  emailVerified     Boolean       @default(false)
  image             String?
  password          String?
  provider          String?       // "google", "credentials", etc.
  providerAccountId String?       // OAuth provider account ID
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  savingsGoals      SavingsGoal[]

  @@map("users")
}

// Password reset tokens
model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique // URL-safe token for the reset link
  code      String   // 6-digit code sent to email
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([email])
  @@index([token])
  @@map("password_reset_tokens")
}

// Email verification tokens for signup
model EmailVerificationToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([email])
  @@index([token])
  @@map("email_verification_tokens")
}

// Wallet types (e-wallets, banks)
enum WalletType {
  EWALLET
  BANK
  CASH
  OTHER
}

// Predefined wallets/banks with logos
model Wallet {
  id           String        @id @default(cuid())
  slug         String        @unique // e.g., "gcash", "maya", "bpi"
  logo         String        // path to logo: "/wallets/gcash.png"
  type         WalletType    @default(EWALLET)
  isActive     Boolean       @default(true)
  createdAt    DateTime      @default(now())
  savingsGoals SavingsGoal[]

  @@map("wallets")
}

// User's savings goal linked to a wallet
model SavingsGoal {
  id            String         @id @default(cuid())
  userId        String
  walletId      String
  name          String         @default("Savings") // e.g., "Emergency Fund", "Investment", "Vacation"
  currentAmount Decimal        @default(0) @db.Decimal(12, 2)
  targetAmount  Decimal?       @db.Decimal(12, 2) // optional target
  isCompleted   Boolean        @default(false)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  user    User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  wallet  Wallet         @relation(fields: [walletId], references: [id])
  entries SavingsEntry[]

  @@map("savings_goals")
}

// Individual savings entries (deposits/withdrawals)
model SavingsEntry {
  id            String      @id @default(cuid())
  savingsGoalId String
  amount        Decimal     @db.Decimal(12, 2) // positive = deposit, negative = withdrawal
  note          String?
  createdAt     DateTime    @default(now())

  savingsGoal SavingsGoal @relation(fields: [savingsGoalId], references: [id], onDelete: Cascade)

  @@map("savings_entries")
}
